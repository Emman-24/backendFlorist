<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="4" author="emman">
        <createTable tableName="products">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="subcategory_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="slug" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="stock_status" type="VARCHAR(20)" defaultValue="available">
                <constraints nullable="false"/>
            </column>
            <column name="seasonal" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="featured" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="views" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(12,2)">
                <constraints nullable="false"/>
            </column>

            <column name="facebook_url" type="VARCHAR(1024)"/>
            <column name="instagram_url" type="VARCHAR(1024)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_products_category" tableName="products">
            <column name="category_id"/>
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_products_subcategory" tableName="products">
            <column name="subcategory_id"/>
            <column name="status"/>
        </createIndex>

        <createIndex indexName="idx_products_featured" tableName="products">
            <column name="featured"/>
            <column name="status"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="products"
                baseColumnNames="category_id"
                constraintName="fk_product_category"
                referencedTableName="categories"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="products"
                baseColumnNames="subcategory_id"
                constraintName="fk_product_subcategory"
                referencedTableName="sub_category"
                referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="5" author="emman">
        <createTable tableName="product_descriptions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="paragraph" type="TEXT"/>
            <column name="position" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="product_descriptions"
                baseColumnNames="product_id"
                constraintName="fk_product_description"
                referencedTableName="products"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>


</databaseChangeLog>